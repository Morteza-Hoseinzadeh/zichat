{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "incremental": true,
    "noEmit": true, // Prevents emitting output files like .js (stops generating JavaScript).
    "skipLibCheck": true, // Skips type checking of declaration files (.d.ts).
    "strict": false, // Disables strict type checking, including strictNullChecks, noImplicitAny, etc.
    "noImplicitAny": false, // Allows variables to have the `any` type without a warning.
    "noUncheckedIndexedAccess": false, // Allows indexing into objects with unchecked access.
    "allowJs": true, // Allows JavaScript files along with TypeScript files.
    "isolatedModules": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
